<section class="bg-white">
    <div class="container py-5">
        <div class="row text-center py-3">
            <div class="col-lg-6 m-auto">
                <h1 class="h1">Featured Products</h1>
                <p>
                    The most popular and best-selling products in our store.
                </p>
            </div>
        </div>
        <div class="row">
            <%= render partial: 'layouts/partials/advertising_product', collection: @featured_products, as: :product %>
        </div>
    </div>
