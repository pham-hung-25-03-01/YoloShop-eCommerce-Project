<li onclick="open_dropdown_without_preventDefault(event)">
    <div id="cart-item-<%= item.inventory_id %>" class="row px-3">
        <a class="col-md-11 row text-decoration-none" href="/products/<%= item.inventory.product.meta_title %>">
            <div class="col-md-4">
                <img class="item-cart-img mb-2 border-img" src="<%= item.inventory.color_url %>" alt="<%= item.inventory.product.product_name %>" />
            </div>
            <div class="col-md-8 my-auto">
                <span class="text-dark d-block font-size-1-1-rem"><%= item.inventory.product.product_name %> size <%= item.inventory.size %></span>
                <span class="text-success font-size-0-9-rem"><%= number_to_currency(item.inventory.product.sell_price * (1 - item.inventory.product.product_discount / 100), precision: 0, unit: 'VND', format: '%n %u') %>               
                </span>
                <span id="cart-item-quantity-<%= item.inventory_id %>" class="text-muted mx-3 font-size-0-9-rem">Quantity: <%= item.quantity %></span>
            </div>
        </a>
        <div class="col-md-1 my-auto">
            <button class="btn btn-danger" type="button" onclick="remove_from_cart('<%= item.inventory.product_id %>', '<%= item.inventory.size %>', '<%= item.inventory.color_url %>')"><i class="fa faw fa-trash-alt text-white"></i></button>
        </div>
    </div>
</li>