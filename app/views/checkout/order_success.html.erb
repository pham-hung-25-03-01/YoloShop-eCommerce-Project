<div class="container py-5">
    <div class="row"> 
        <h2 class="h1 text-success text-center"><i class="fa fa-fw fa-thumbs-up"></i> Order success!</h2>
        <p class="text-dark text-center">
            <label>Order id: <%= @order.id %></label></br>
            <label>Your order is awaiting approval from our shop. We will send the product to you as soon as possible.</label></br>              
            <a href="/users/orders-history" class="btn btn-success my-5 mb-0">View this order</a>
        </p>
        <section class="py-5">
            <div class="container">
                <div class="row text-left p-2 pb-3">
                    <h4>Recommend Products</h4>
                </div>

                <!--Start Carousel Wrapper-->
                <div id="carousel-related-product" class="row">
                    <%= render partial: 'layouts/partials/product', collection: @products, as: :product %>
                </div>
            </div>
        </section>  
    </div>
</div>